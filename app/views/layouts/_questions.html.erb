<%= nested_form_for @quiz do |f| %>
  <% @questions.each do |question| %>

    <p><%= question.question %></p>
    <div class="radio">
      <label>
        <input type="radio" name=<%=question.id%> value="A">
        <p><%= question.correct_answer %></p>
      </label>
    </div>
    <div class="radio">
      <label>
        <input type="radio" name=<%=question.id%> value="B">
        <p><%= question.answer1 %></p>
      </label>
    </div>
    <div class="radio">
      <label>
        <input type="radio" name=<%=question.id%> value="C">
        <p><%= question.answer2 %></p>
      </label>
    </div>
    <div class="radio">
      <label>
        <input type="radio" name=<%=question.id%>  value="D">
        <p><%= question.answer3 %></p>
      </label>
    </div>

  <%end%>
  <%= f.submit "Submit"  %>
<%end%>
